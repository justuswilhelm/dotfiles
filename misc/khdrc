# Enable kwm compatibility mode
khd kwm on

# Give Focus To Window
alt + shift - h: kwmc window -f west
alt + shift - l: kwmc window -f east
alt + shift - j: kwmc window -f south
alt + shift - k: kwmc window -f north

# Give Focus To Screen
alt + shift - 1 : kwmc display -f 0
alt + shift - 2 : kwmc display -f 1
alt + shift - 3 : kwmc display -f 2

# Swap Focused Window
alt + shift + ctrl - h : kwmc window -s west
alt + shift + ctrl - j : kwmc window -s south
alt + shift + ctrl - k : kwmc window -s north
alt + shift + ctrl - l : kwmc window -s east

# Move Focused Window To Space
alt + shift + ctrl - left: kwmc window -m space left
alt + shift + ctrl - right: kwmc window -m space right

# Move Focused Window To Screen
alt + shift + ctrl - 1: kwmc window -m display 0
alt + shift + ctrl - 2: kwmc window -m display 1
alt + shift + ctrl - 3: kwmc window -m display 2
