#!/bin/sh
set -e

DOTFILES="$HOME/.dotfiles"

XDG_CONFIG_HOME="$HOME/.config"

if test -e "$HOME/dotfiles"
then
    mv -vf "$HOME/dotfiles" "$DOTFILES"
fi

rm -fv "$XDG_CONFIG_HOME/fish"
ln -sfv "$DOTFILES/fish" "$HOME/.config"

if grep -e 'fish' /etc/shells > /dev/null
then
    bin/config
else
    echo "###"
    echo "Please install fish and add it to /etc/shells"
    echo "###"
    exit 1
fi
