#!/usr/bin/env fish
function check_dependencies
    if type brew > /dev/null ^&1
        return
    end
    if is_darwin
        echo "No brew installed, on macOS run"
        echo '/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"'
        exit 1
    end
end

check_dependencies

config_symlinks

config_brew

config_darwin
config_git
config_go
config_npm
config_nvim
config_python
config_shell
